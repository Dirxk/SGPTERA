@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        //============================================================================================================================\\
        //====================================================  Variables Globales  ===================================================\\
        //==============================================================================================================================\\
        // Variable global para almacenar la instancia de la grilla de ModuloSistemas.
        var GridModuloSistemas = null;


        // Inicializar el AutoComplete con los datos obtenidos
        var cbIdSistema = new wijmo.input.AutoComplete('#cbIdSistema', {
            displayMemberPath: 'Sistema', selectedValuePath: 'Id', itemsSource: [], selectedValue: -1
        });

        var cbIdSistemaEdit = new wijmo.input.AutoComplete('#cbIdSistemaEdit', {
            displayMemberPath: 'Sistema', selectedValuePath: 'Id', itemsSource: [], selectedValue: -1
        });

        // Función que realiza una solicitud AJAX para obtener los ModuloSistemas desde el servidor.
        function verModuloSistemas() {
            return new Promise((resolve, reject) => {
                const startTime = performance.now(); // Inicia el contador para medir el tiempo de respuesta.

                $.ajax({
                    type: 'POST', // Método HTTP utilizado para la solicitud.
                    data: {}, // Datos enviados al servidor (en este caso, vacío).
                    url: '@Url.Action("GetModuloSistemas", "Catalogos")',
                    success: function (datos) {
                        const endTime = performance.now(); // Finaliza el contador de tiempo.
                        const serverResponseTime = endTime - startTime; // Calcula el tiempo de respuesta del servidor.
                        GridModuloSistemas.itemsSource = datos.data; // Asigna los datos recibidos a la grilla de ModuloSistemas.
                        resolve(serverResponseTime); // Resuelve la promesa con el tiempo de respuesta.
                    },
                    error: function () {
                        console.error("Error al obtener los ModuloSistemas."); // Maneja errores en la solicitud.
                        reject(); // Rechaza la promesa en caso de error.
                    }
                });
            });
        }

        //============================================================================================================================\\
        //================================== funciones para obtener los datos de empresa y de puestos =================================\\
        //==============================================================================================================================\\

        function getDataSistema() {
            return new Promise((resolve, reject) => {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetSistemas", "Catalogos")',
                    success: function (response) {
                        if (response.resultado && response.data && response.data.length > 0) {
                            // Filtrar solo los sistema activos y mapear al formato requerido
                            const data = response.data
                                .filter(sistema => sistema.flgActivo == 1)
                                .map(sistema => ({
                                    Id: sistema.id,
                                    Sistema: sistema.descripcion
                                }));
                            resolve(data); // Resolver la promesa con los datos
                        } else {
                            reject("No se pudieron obtener los sistema o la respuesta está vacía.");
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        reject("Error al obtener los sistema: " + textStatus + " - " + errorThrown);
                    }
                });
            });
        }

        //============================================================================================================================\\
        //================================  Función para editar un cliente usuario específico basado en su ID  =========================\\
        //==============================================================================================================================\\

        function EditarModuloSistema(id) {
            const modulosistema = GridModuloSistemas.itemsSource.find(u => u.id === id);
            if (modulosistema) {
                // Guardar los valores iniciales del cliente usuario
                valoresIniciales = {
                    moduloSistemaDescripcion: modulosistema.moduloSistemaDescripcion || '',
                    detalles: modulosistema.detalles || '',
                    idSistema: modulosistema.idSistema || -1,
                };

                // Asigna los valores del cliente usuario a los campos del formulario de edición.
                $('#InpModuloSistemasDescripcionEdit').val(valoresIniciales.moduloSistemaDescripcion);
                $('#InpDetallesEdit').val(valoresIniciales.detalles);
               
                // Deshabilitar el botón de actualizar inicialmente
                $('#btnActualizarModuloSistema').prop('disabled', true);

                // Muestra el modal de edición de cliente usuario.
                const modalEditarModuloSistema = new bootstrap.Modal($('#ModalEditarModuloSistema')[0]);
                modalEditarModuloSistema.show();
                $('#btnActualizarModuloSistema').data('id', id);

                // Cargar datos de sistemas
                getDataSistema()
                    .then(data => {
                        cbIdSistemaEdit.itemsSource = data;
                        const idSistema = Number(valoresIniciales.idSistema);
                        const sistemaSeleccionado = data.find(sistema => sistema.Id === idSistema);
                        if (sistemaSeleccionado) {
                            cbIdSistemaEdit.selectedValue = idSistema;
                        } else {
                            const valorPorDefecto = data[0]?.Id || null;
                            cbIdSistemaEdit.selectedValue = valorPorDefecto;
                            console.warn("idSistema no encontrado. Usando valor por defecto:", valorPorDefecto);
                        }
                    })
                    .catch(error => {
                        console.error(error);
                        swal.fire('Error', 'No se pudieron cargar los datos de los sistemas disponibles.', 'error');
                        cbIdSistemaEdit.isDisabled = true;
                    });
            } else {
                console.error("Cliente usuario no encontrado.");
            }
        }

        //============================================================================================================================\\
        //===============================  Inicialización del GRID ModuloSistemas y Configuración de Eventos  ===============================\\
        //==============================================================================================================================\\

        $(document).ready(function () {

            //============================================================================================================================\\
            //==========================================               GRID Principal                ======================================\\
            //==============================================================================================================================\\
            // Inicializa la grilla antes de llamar a verModuloSistemas()
            GridModuloSistemas = new wijmo.grid.FlexGrid('#GridModuloSistemas', {
                autoGenerateColumns: false,
                headersVisibility: 'Column',
                itemsSource: [],
                selectionMode: wijmo.grid.SelectionMode.Row,
                columns: [
                    { binding: '', header: '#', width: 50, align: 'center' },
                    { binding: 'moduloSistemaDescripcion', header: 'Módulos', width: '*', align: 'center' },
                    { binding: 'idSistema', header: 'Sistema', width: '*', align: 'center' },
                    { binding: 'detalles', header: 'Detalles', width: '*', align: 'center' },
                    { header: '', isReadOnly: true, width: 80, align: 'center' }
                ],
                isReadOnly: true,
                itemFormatter: function (panel, r, c, cell) {
                    if (panel.cellType === wijmo.grid.CellType.Cell) {
                        const rowData = panel.rows[r].dataItem; // Obtiene los datos de la fila.
                        const flgActivo = rowData.flgActivo; // Verificar el valor de FlgActivo.
                        // Mostrar la razón social en lugar del idCliente
                        if (panel.columns[c].binding === 'idSistema') {
                            cell.textContent = rowData.descripcion; // Muestra la razón social en lugar del idCliente.
                        }
                        if (c === 0) {
                            cell.textContent = (r + 1).toString(); // Muestra el número de fila.
                        } else if (c === panel.columns.length - 1) {
                            // Crear los botones según el valor de FlgActivo
                            let botones = '';
                            if (flgActivo === true) {
                                botones = `
                                <div class="d-flex justify-content-center align-items-center gap-2">
                                    <button style="height: 25px; width: 25px;" class="btn btn-phoenix-secondary btn-icon fs--2 text-900 abrirModalEditarModuloSistema" onclick="EditarModuloSistema(${rowData.id})">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button style="height: 25px; width: 25px;" class="btn btn-phoenix-secondary btn-icon fs--2 text-danger abrirModalEliminarModuloSistema" data-id="${rowData.id}" data-nombre="${rowData.moduloSistemaDescripcion}">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>`;
                            } else if (flgActivo === false) {
                                botones = `
                                <div class="d-flex justify-content-center align-items-center gap-2">
                                    <button style="height: 25px; width: 25px;" class="btn btn-phoenix-secondary btn-icon fs--2 text-success abrirModalConfirmarModuloSistema" data-id="${rowData.id}" data-nombre="${rowData.moduloSistemaDescripcion}">
                                        <i class="fas fa-check"></i>
                                    </button>
                                </div>`;
                            }

                            // Insertar los botones en la celda
                            cell.innerHTML = botones;
                        }
                    }
                }
            });

            // Llama a verModuloSistemas() después de inicializar la grilla
            verModuloSistemas();

            //============================================================================================================================\\
            //==========================================  Funcionalidad de Búsqueda y Autocompletar   =====================================\\
            //==============================================================================================================================\\


            $('#inputBusqueda').autocomplete({
                source: function (request, response) {
                    const term = request.term.toLowerCase(); // Obtiene el término de búsqueda.
                    const ModuloSistemas = GridModuloSistemas.itemsSource; // Obtiene la lista de ModuloSistemas.
                    const resultados = ModuloSistemas.filter(modulosistema =>
                        modulosistema.moduloSistemaDescripcion.toLowerCase().includes(term)
                    );
                    response(resultados.map(modulosistema => ({
                        label: `${modulosistema.moduloSistemaDescripcion}`, // Muestra la descripción y tipo.
                        value: modulosistema.moduloSistemaDescripcion // Asigna el ID del puesto como valor.
                    })));
                },
                select: function (event, ui) {
                    const modulosistemaId = ui.item.value; // Obtiene el ID del puesto seleccionado.
                    const modulosistema = GridModuloSistemas.itemsSource.find(p => p.id === modulosistemaId); // Busca el puesto en la grilla.
                    if (modulosistema) {
                        GridModuloSistemas.itemsSource = [modulosistema]; // Filtra la grilla para mostrar solo el puesto seleccionado.
                    }
                }
            });

            // Evento para buscar al hacer clic en el botón de búsqueda.
            $('#btnBuscar').on('click', function () {
                const term = $('#inputBusqueda').val().toLowerCase(); // Obtiene el término de búsqueda.
                const ModuloSistemas = GridModuloSistemas.itemsSource; // Obtiene la lista de ModuloSistemas.
                const resultados = ModuloSistemas.filter(modulosistema =>
                    modulosistema.moduloSistemaDescripcion.toLowerCase().includes(term)
                );

                if (resultados.length > 0) {
                    GridModuloSistemas.itemsSource = resultados; // Filtra la grilla para mostrar los resultados.
                    $('#mensajeNoEncontrado').hide(); // Oculta el mensaje de "Puesto no encontrado".
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'No se encontró ningún resultado',
                    });
                }
            });

            // Evento para limpiar la búsqueda y mostrar todos los ModuloSistemas.
            $('#inputBusqueda').on('input', function () {
                if ($(this).val() === '') {
                    verModuloSistemas(); // Recarga todos los ModuloSistemas.
                    $('#mensajeNoEncontrado').hide(); // Oculta el mensaje de "Puesto no encontrado".
                }
            });


            //============================================================================================================================\\
            //==========================================      Funcionalidad del botón Recargar       ======================================\\
            //==============================================================================================================================\\

            $('#btnReloadModuloSistemas').on('click', function () {
                // Ocultar el grid de ModuloSistemas
                document.getElementById('GridModuloSistemas').style.visibility = 'hidden';

                // Bloquear el contenido principal con el estilo "arrows"
                Notiflix.Block.arrows('.card', 'Actualizando datos...', {
                    backgroundColor: 'rgba(255, 255, 255, 0.8)', // Fondo semitransparente
                    svgSize: '50px', // Tamaño del ícono de flechas
                    messageFontSize: '16px', // Tamaño del mensaje
                });

                // Llamar a la función verModuloSistemas para recargar el grid
                verModuloSistemas().then((serverResponseTime) => {
                    // Tiempo adicional de 500 ms después de la respuesta del servidor
                    setTimeout(() => {
                        // Desbloquear el contenido principal
                        Notiflix.Block.remove('.card');

                        // Mostrar el grid después de que termine la animación de éxito
                        document.getElementById('GridModuloSistemas').style.visibility = 'visible';
                    }, serverResponseTime + 500); // Tiempo del servidor + 500 ms
                }).catch(() => {
                    // En caso de error, desbloquear el contenido principal
                    Notiflix.Block.remove('.card');

                    // Mostrar un mensaje de error con SweetAlert2 (puedes cambiarlo por Notiflix si prefieres)
                    Swal.fire({
                        title: 'Error',
                        text: 'Hubo un error al recargar los ModuloSistemas.',
                        icon: 'error',
                        timer: 2000,
                        timerProgressBar: true,
                        showConfirmButton: false,
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        allowEnterKey: false
                    });

                    // Mostrar el grid incluso si hay un error
                    document.getElementById('GridModuloSistemas').style.visibility = 'visible';
                });
            });

            //============================================================================================================================\\
            //===================================== Funcionalidad del boton de Agregar ModuloSistemas =====================================\\
            //==============================================================================================================================\\

            //Combobox Empresa
            getDataSistema()
                .then(data => {
                    cbIdSistema.itemsSource = data;
                    cbIdSistema.selectedValue = -1;
                })
                .catch(error => {
                    console.error(error);
                    swal.fire('Error', 'No se pudieron cargar los datos de los sistemas disponibles.', 'error');
                    cbIdSistema.isDisabled = true;
                });

            // Resto del código de validación del formulario
            $("#FormCrearProyecto").validate({
                rules: {
                    InpModuloSistemasDescripcion: { required: true, minlength: 2 },
                    InpDetalles: { required: true, minlength: 2 },
                },
                messages: {
                    InpModuloSistemasDescripcion: { required: "El módulo es requerido.", minlength: "Mínimo 2 caracteres." },
                    InpDetalles: { required: "La descripción del módulo es requerida.", minlength: "Mínimo 2 caracteres." },
                },
                submitHandler: function (form, event) {
                    event.preventDefault();

                    // Validar que se haya seleccionado una empresa
                    if (cbIdSistema.selectedValue == null || cbIdSistema.selectedValue === -1) {
                        swal.fire('Advertencia', 'Por favor selecciona para que sistema es este módulo', 'warning');
                        return; // Detiene la ejecución si no se ha seleccionado una empresa
                    }

                    // Si todo está correcto, llama a la función para agregar el cliente
                    agregarModuloSistema();
                },
                errorPlacement: function (error, element) {
                    error.addClass('col-12 mt-2 bg-danger text-white text-center p-2 rounded');
                    error.insertAfter(element);
                },
                errorElement: 'div',
